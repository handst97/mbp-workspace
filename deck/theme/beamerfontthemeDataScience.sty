% beamerfontthemeDataScience.sty
% Custom font theme for Data Science course
% Clean, readable typography

\mode<presentation>

% Use sans-serif throughout
\usefonttheme{professionalfonts}

% Title fonts
\setbeamerfont{title}{size=\Large,series=\bfseries}
\setbeamerfont{subtitle}{size=\normalsize,series=\mdseries}
\setbeamerfont{author}{size=\normalsize,series=\mdseries}
\setbeamerfont{institute}{size=\small,series=\mdseries}
\setbeamerfont{date}{size=\small,series=\mdseries}

% Frame fonts
\setbeamerfont{frametitle}{size=\large,series=\bfseries}
\setbeamerfont{framesubtitle}{size=\small,series=\mdseries}

% Section fonts
\setbeamerfont{section title}{size=\Large,series=\bfseries}
\setbeamerfont{section in toc}{size=\normalsize,series=\bfseries}
\setbeamerfont{subsection in toc}{size=\small}

% Block fonts
\setbeamerfont{block title}{size=\normalsize,series=\bfseries}
\setbeamerfont{block body}{size=\small}
\setbeamerfont{block title alerted}{size=\normalsize,series=\bfseries}
\setbeamerfont{block body alerted}{size=\small}
\setbeamerfont{block title example}{size=\normalsize,series=\bfseries}
\setbeamerfont{block body example}{size=\small}

% Item fonts
\setbeamerfont{item}{size=\normalsize}
\setbeamerfont{subitem}{size=\small}
\setbeamerfont{subsubitem}{size=\footnotesize}

% Caption fonts
\setbeamerfont{caption}{size=\footnotesize}
\setbeamerfont{caption name}{size=\footnotesize,series=\bfseries}

% Footer fonts
\setbeamerfont{footline}{size=\tiny}
\setbeamerfont{author in head/foot}{size=\tiny}
\setbeamerfont{title in head/foot}{size=\tiny}
\setbeamerfont{page number in head/foot}{size=\tiny}

% Alerted text
\setbeamerfont{alerted text}{series=\bfseries}

\mode<all>
